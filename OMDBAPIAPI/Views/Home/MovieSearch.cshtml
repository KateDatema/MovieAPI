@model Movies


<div>

    <form action="MovieSearch" method="post">
        <h2>Search for Movies!</h2>
           
            <label for="Title" class="col-sm-2 col-form-label">Movie Title:</label>
            <input type="text" name="Title" placeholder="Title" maxlength="30"/>
            <br />
            <br />
            <input type="submit" class="btn btn-primary" value="Movie Search" />
</form>


    @try
    {
        <br />
        <div>
            <h2>@Model.Title</h2>
            <img src=@Model.Poster width=250 />
            <p>Year: @Model.Year</p>
            <p>Rated: @Model.Rated</p>
            <p>Released: @Model.Released</p>
            <p>Runtime: @Model.Runtime</p>
            <p>Genre: @Model.Genre</p>
            <p>Director: @Model.Director</p>
            <p>Writer: @Model.Writer</p>
            <p>Actor: @Model.Actors</p>
            <p>Plot: @Model.Plot</p>
            <p>Language: @Model.Language</p>
            <p>Country: @Model.Country</p>
            <p>Awards: @Model.Awards</p>
         
            @foreach (Rating r in Model.Ratings)
            {
                <p>Rating: @r.Source</p>
                <p>Value: @r.Value</p>
            }
            <p>Metascore: @Model.Metascore</p>
            <p>imdbRating: @Model.imdbRating</p>
            <p>imdbVotes: @Model.imdbVotes</p>
            <p>imdbID: @Model.imdbID</p>
            <p>Type: @Model.Type</p>
            <p>DVD: @Model.DVD</p>
            <p>BoxOffice: @Model.BoxOffice</p>
            <p>Production: @Model.Production</p>
            <p>Website: @Model.Website</p>
            <p>Response: @Model.Response</p>
        </div>
    }
    catch (NullReferenceException)
    {

    }
</div>




